{
  "multipart": [ {
      "when": {
        "brotation" : "hor_west|hor_east"
      },
      "apply" : {
        "model" : "growthcraft_cellar:ferment_barrel",
        "y" : 90
      }
    }, {
      "when": {
        "brotation" : "hor_north|hor_south"
      },
      "apply" : {
        "model" : "growthcraft_cellar:ferment_barrel",
        "y" : 0
      }
    }, {
      "when": {
        "brotation" : "ver_east|ver_west|ver_north|ver_south"
      },
      "apply" : {
        "model" : "growthcraft_cellar:ferment_barrel",
        "x" : 90
      }
    }, {
      "when": { 
        "OR": [ {
            "hastap" : "true",
            "brotation" : "hor_east"
          }
        ]
      },
      "apply" : {
        "model": "growthcraft_cellar:ferment_barrel_tap_hor",
        "y": 270
      }
    }, {
      "when": { 
        "OR": [ {
            "hastap" : "true",
            "brotation" : "hor_west"
          }
        ]
      },
      "apply" : {
        "model": "growthcraft_cellar:ferment_barrel_tap_hor",
        "y": 90
      }
    }, {
      "when": {
        "OR": [ {
            "hastap" : "true",
            "brotation" : "hor_south"
          }
        ]
      },
      "apply" : {
        "model": "growthcraft_cellar:ferment_barrel_tap_hor",
        "y": 0
      }
    }, {
      "when": {
        "OR": [ {
            "hastap" : "true",
            "brotation" : "hor_north"
          }
        ]
      },
      "apply" : {
        "model": "growthcraft_cellar:ferment_barrel_tap_hor",
        "y": 180
      }
    }, {
      "when": { 
        "OR": [ {
            "hastap" : "true",
            "brotation" : "ver_east"
          }
        ]
      },
      "apply" : {
        "model": "growthcraft_cellar:ferment_barrel_tap_ver",
        "y": 270
      }
    }, {
      "when": { 
        "OR": [ {
            "hastap" : "true",
            "brotation" : "ver_west"
          }
        ]
      },
      "apply" : {
        "model": "growthcraft_cellar:ferment_barrel_tap_ver",
        "y": 90
      }
    }, {
      "when": {
        "OR": [ {
            "hastap" : "true",
            "brotation" : "ver_south"
          }
        ]
      },
      "apply" : {
        "model": "growthcraft_cellar:ferment_barrel_tap_ver",
        "y": 0
      }
    }, {
      "when": {
        "OR": [ {
            "hastap" : "true",
            "brotation" : "ver_north"
          }
        ]
      },
      "apply" : {
        "model": "growthcraft_cellar:ferment_barrel_tap_ver",
        "y": 180
      }
    }
  ]
}